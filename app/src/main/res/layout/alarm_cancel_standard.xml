<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.fanuware.android.snoop.GrowTouchButton
        android:id="@+id/alarmResetButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/alarmResetAnimation"
        android:layout_width="198dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/art_circle"
        android:tint="@color/colorLight"
        app:layout_constraintBottom_toBottomOf="@+id/alarmResetButton"
        app:layout_constraintEnd_toEndOf="@+id/alarmResetButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/alarmResetButton"
        app:layout_constraintTop_toTopOf="@+id/alarmResetButton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/art_cancel_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/hint_two_finger"
        app:layout_constraintEnd_toEndOf="@+id/alarmResetAnimation"
        app:layout_constraintStart_toStartOf="@+id/alarmResetAnimation"
        app:layout_constraintTop_toBottomOf="@+id/alarmResetAnimation" />

</android.support.constraint.ConstraintLayout>